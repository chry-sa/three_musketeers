<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/penguin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="HappyFeet"
        android:textColor="#A86C14"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:fontFamily="serif-monospace"
        android:textStyle="bold"
        android:id="@+id/txt"
        android:textSize="34dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/input_shape"
        android:padding="16dp"
        android:inputType="textPersonName"
        android:hint="Username..."
        android:textStyle="bold"
        android:textColorHint="#B7FFFFFF"
        android:id="@+id/login_username"
        android:singleLine="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login_username"
        android:layout_marginTop="20dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/input_shape"
        android:padding="16dp"
        android:inputType="textPassword"
        android:hint="Password..."
        android:textStyle="bold"
        android:textColorHint="#B7FFFFFF"
        android:id="@+id/login_password" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/login_password"
        android:text=" Forget Password?"
        android:textStyle="bold"
        android:textColor="#B7FFFFFF"
        android:id="@+id/reset_password"
        android:padding="1dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_shape"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="33dp"
        android:background="#A86C14"
        android:text="Login"
        android:textColor="#B7FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnToSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_shape"
        android:text="Sign Up"
        android:textColor="#A86C14"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btnToSignUp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/divider_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="2dp"
            android:text="OR"
            android:textColor="#A86C14"
            android:textStyle="bold" />

        <View
            android:layout_width="170dp"
            android:layout_height="2dp"
            android:layout_toRightOf="@+id/divider_txt"
            android:layout_centerVertical="true"
            android:background="#A86C14" />

        <View
            android:layout_width="179dp"
            android:layout_height="2dp"
            android:layout_toLeftOf="@+id/divider_txt"
            android:layout_centerVertical="true"
            android:background="#A86C14" />

    </RelativeLayout>

    <Button
        android:id="@+id/login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/input_shape"
        android:drawableLeft="@drawable/ic__3003354851543238910"
        android:paddingLeft="10dp"
        android:text="Phone"
        android:textColor="#A86C14"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_shape_facebook"
        android:drawableLeft="@drawable/ic_facebook"
        android:paddingLeft="10dp"
        android:text="Facebook"
        android:textColor="#FFffffff"
        android:textStyle="bold" />


</RelativeLayout>